    "paths": {
        "/inventory/apis/items/{gtin}/order": {
            "post": {
                "summary": "placing an order",
                "description": "placing an order\n",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "gtin",
                        "in": "path",
                        "description": "id of the gtin",
                        "type": "Integer"
                    },
                    {
                        "name": "orderId",
                        "in": "query",
                        "description": "order Id",
                        "type": "Integer",
                        "required": true
                    },
                    {
                        "name": "orderQty",
                        "in": "query",
                        "description": "order quantity",
                        "type": "Integer",
                        "required": true
                    }
                ],
                "tags": [
                    "orders"
                ],
                "responses": {
                    "200": {
                        "description": "ordering for item operation response",
                        "schema": {
                            "$ref": "#/definitions/response"
                        }
                    },
                    "500": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/inventory/apis/items/gtin/{gtin}": {
            "get": {
                "summary": "get order details based on gtin",
                "description": "get order details based on gtin\n",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "gtin",
                        "in": "path",
                        "description": "gtin of the item",
                        "type": "Integer"
                    }
                ],
                "tags": [
                    "items"
                ],
                "responses": {
                    "200": {
                        "description": "fetched order details by gtin ID",
                        "schema": {
                            "$ref": "#/definitions/response"
                        }
                    },
                    "500": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Error": {
            "type": "object",
            "properties": {
